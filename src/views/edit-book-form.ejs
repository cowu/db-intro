<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>My Fav Books</title>
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="container">
    <h1>Edit Book</h1>
    <div class="row">
      <%- include('messages') %>

      <form method="post" action="/books/<%= book.id %>?_method=PUT" class="col-md-4">
        <div class="form-group">
          <label for="title">Title</label>
          <input id="title" type="text" name="title" class="form-control" placeholder="title" value="<%= book.title %>">
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <select name="authorId" id="author">
            <% authors.forEach(function(author) { %>
              <option value="<%= author.id %>"><%= author.firstname %> <%= author.lastname %></option>
            <% }) %>
          </select>
        </div>
        <input type="hidden" name="id" value="<%= book.id %>">
        <input type="hidden" name="author_id" value="<%= book.author_id %>">
        <input type="submit" class="btn btn-default">
      </form>
    </div>
  </div>

  <script src="/lib/jquery/dist/jquery.js"></script>
  <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>
